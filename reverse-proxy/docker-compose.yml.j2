services:
  # Traefik

  traefik:
    image: traefik:v2.10
    container_name: traefik
    environment:
      DUCKDNS_TOKEN: "{@DUCKDNS_TOKEN@}"
    ports:
      - 80:80
      - 443:443
      # - 8080:8080
    volumes:
      - type: bind
        source: ./traefik/traefik.yml
        target: /traefik.yml
        read_only: true
      - type: bind
        source: ./traefik/config
        target: /config
        read_only: true
      - type: bind
        source: "{@DATA_PATH@}/traefik/letsencrypt"
        target: /letsencrypt
      - type: bind
        source: "{@LOGS_PATH@}/traefik"
        target: /logs
    networks:
      - reverse-proxy
      - docker-socket-proxy
      - authelia
      # - watchtower
      - homepage
      - immich
      - photoprism
      - filebrowser
      - qbittorrent
      - radarr
      - sonarr
      - prowlarr
      - bazarr
      - jellyfin
      - jellyseerr
      - readarr
      - calibre
      - mealie
      - rallly
      - stirling-pdf
    depends_on:
      - docker-socket-proxy
      - authelia
    labels:
      com.centurylinklabs.watchtower.enable: true
    restart: unless-stopped

  docker-socket-proxy:
    image: tecnativa/docker-socket-proxy
    container_name: docker-socket-proxy
    environment:
      CONTAINERS: 1
      INFO: 1
      IMAGES: 1
      VOLUMES: 1
      NETWORKS: 1
    volumes:
      - type: bind
        source: /var/run/docker.sock
        target: /var/run/docker.sock
        read_only: true
    networks:
      - docker-socket-proxy
    labels:
      com.centurylinklabs.watchtower.enable: true
    restart: unless-stopped

  authelia:
    image: authelia/authelia
    container_name: authelia
    environment:
      TZ: "{@TZ@}"
      PUID: "{@PUID@}"
      PGID: "{@PGID@}"
    volumes:
      - type: bind
        source: ./authelia
        target: /config
        read_only: true
      - type: bind
        source: "{@DATA_PATH@}/authelia"
        target: /data
      - type: bind
        source: "{@LOGS_PATH@}/authelia"
        target: /logs
    labels:
      com.centurylinklabs.watchtower.enable: true
      traefik.enable: true
      traefik.http.routers.authelia.rule: Host(`auth.{@DOMAIN@}`)
      traefik.http.routers.authelia.entryPoints: websecure
    networks:
      - authelia
    depends_on:
      - authelia-redis
    restart: unless-stopped

  authelia-redis:
    image: redis:alpine
    container_name: authelia-redis
    volumes:
      - type: bind
        source: "{@DATA_PATH@}/authelia/redis"
        target: /data
    networks:
      - authelia
    labels:
      com.centurylinklabs.watchtower.enable: true
    restart: unless-stopped

  duckdns:
    image: lscr.io/linuxserver/duckdns:latest
    container_name: duckdns
    environment:
      TZ: "{@TZ@}"
      PUID: "{@PUID@}"
      PGID: "{@PGID@}"
      SUBDOMAINS: "{@DUCKDNS_SUBDOMAINS@}"
      TOKEN: "{@DUCKDNS_TOKEN@}"
      LOG_FILE: false
    volumes:
      - type: bind
        source: "{@DATA_PATH@}/duckdns"
        target: /config
    networks:
      - duckdns
    restart: unless-stopped

